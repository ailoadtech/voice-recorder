{
  "name": "voice-intelligence-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true npm run build",
    "build:prod": "NODE_ENV=production npm run build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "validate-env": "tsx scripts/validate-env.ts",
    "validate:api-keys": "tsx scripts/validate-api-keys.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf .next out node_modules/.cache",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json",
    "reinstall": "npm run clean:all && npm install",
    "prebuild": "npm run clean",
    "postbuild": "node scripts/analyze-bundle.js",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "npm run build:prod && tauri build",
    "tauri:build:debug": "tauri build --debug",
    "tauri:icon": "tauri icon",
    "icons:generate": "node scripts/generate-icons.js",
    "icons:convert": "node scripts/convert-icons.js",
    "icons:build": "npm run icons:generate && npm run icons:convert",
    "sign:setup": "pwsh -File scripts/setup-code-signing.ps1",
    "sign:list": "pwsh -File scripts/setup-code-signing.ps1 -ShowThumbprint",
    "package": "node scripts/package.js",
    "package:clean": "node scripts/package.js --clean",
    "package:debug": "node scripts/package.js --debug",
    "package:windows": "node scripts/package.js --format msi,nsis",
    "package:macos": "node scripts/package.js --format dmg",
    "package:linux": "node scripts/package.js --format appimage,deb",
    "version": "node scripts/version.js",
    "version:patch": "node scripts/version.js patch",
    "version:minor": "node scripts/version.js minor",
    "version:major": "node scripts/version.js major",
    "version:current": "node scripts/version.js --current",
    "version:verify": "node scripts/version.js --verify",
    "version:tag": "node scripts/version.js --tag",
    "release:notes": "node scripts/generate-release-notes.js",
    "release:dist": "node scripts/create-distribution.js",
    "release:dist:clean": "node scripts/create-distribution.js --clean",
    "deps:setup": "bash scripts/setup-dependency-tools.sh",
    "deps:setup:windows": "pwsh -File scripts/setup-dependency-tools.ps1",
    "deps:verify": "bash scripts/verify-dependency-setup.sh",
    "deps:check": "node scripts/update-dependencies.js --check",
    "deps:audit": "node scripts/update-dependencies.js --audit",
    "deps:update": "node scripts/update-dependencies.js --update-patch",
    "deps:update:minor": "node scripts/update-dependencies.js --update-minor",
    "deps:update:major": "node scripts/update-dependencies.js --update-major",
    "deps:fix": "node scripts/update-dependencies.js --fix",
    "security:scan": "node scripts/security-monitor.js --scan --report",
    "security:audit": "node scripts/security-monitor.js --audit",
    "security:fix": "node scripts/security-monitor.js --audit --fix",
    "security:report": "node scripts/security-monitor.js --scan --report",
    "security:ci": "node scripts/security-monitor.js --scan --ci --severity=high"
  },
  "dependencies": {
    "@tauri-apps/plugin-global-shortcut": "^2.0.0",
    "next": "^15.1.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/cli": "^2.9.6",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.23",
    "cssnano": "^7.1.2",
    "eslint": "^8",
    "eslint-config-next": "^15.1.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^3.4.19",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5"
  }
}
